datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum TransactionType {
  RECEIVED
  SENT
}

model Transaction {
  id                Int              @id @default(autoincrement())
  status            String
  date              DateTime
  amount            Int
  txHash            String
  contractId        String
  hashLockTimestamp Int
  lnInvoice         String
  userAddress       String
  transactionType   TransactionType
}
